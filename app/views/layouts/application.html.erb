<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>
  <%# raise current_active_sale[0].name %>
  <main class="container">
  <%# raise active_sale?.inspect %>
    <% if active_sale? %>
      <p class="alert alert-info">
        There's an active "<%= current_active_sale[0].name %>" sale going on!
        <strong>Everything is <%= current_active_sale[0].percent_off %>% off</strong>!
      </p>
    <% end %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
